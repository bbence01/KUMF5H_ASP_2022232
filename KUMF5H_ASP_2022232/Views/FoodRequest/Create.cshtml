@model KUMF5H_ASP_2022232.Models.FoodRequestViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Requets</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        <form enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Deliveryoptions" class="control-label"></label>
                <input asp-for="Deliveryoptions" class="form-control" />
                <span asp-validation-for="Deliveryoptions" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Payment" class="control-label"></label>
                <input asp-for ="Payment" class="form-control" class="form-control" />
                <span asp-validation-for="Payment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Picture</label>
                <input type="file" name="picture" class="form-control" required />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary" role="button" aria-pressed="true">Back</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}